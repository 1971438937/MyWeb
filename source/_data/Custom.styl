$orange       = #008c8c;

.post-body {
  h1{
    display: none !important;
  }
}


.headband {
   display: none;
}

main {
    padding-top: 5rem !important;
}



+mobile() {
    main{
       padding-top: 0px !important; 
    }
}
+tablet() {
    main{
       padding-top: 0px !important; 
   }

}

// 主页文章项目下边距
.posts-expand .post-header {
  margin-bottom: 20px;
}

// 隐藏默认 footer
// footer{
//     display: none !important;
// }

// 显示 footer
.use-motion {
  .footer {
    opacity: 1;
  }
}

/* footer 备案号 */
.TransitionOne {
	transition: all 0.35s linear;
}

a {
	text-decoration: none;
    border-bottom: none;
}

#Record {
	padding-bottom: 0;
    text-align: center;
	display: block;
}

#Record .RecordImg {
	width: 1.2rem;
	display: inline-block;
}

#Record .RecordNumber{
	opacity: 0.7;
	text-decoration: none;
	display: inline-block;
}

#Record .PublicSecurityRecord {
	opacity: 0.7;
	text-decoration: none;
     display: block;
     margin-top: 0.3rem;
}

#Record .RecordNumber:hover,
#Record .PublicSecurityRecord:hover{
	opacity: 0.7;
	text-decoration: none;
	color: #008c8c;
}

// 隐藏默认 footer
.use-motion .footer[style="opacity: 1;"] {
    display: none ;
}

// 回到顶部
.back-to-top{
    color: #222;
    padding: 0 8px;
    border-radius: 3px;
    background: #fff; 
    box-shadow: 0 2px 2px 0 rgba(0,0,0,0.12), 0 3px 1px -2px rgba(0,0,0,0.06), 0 1px 5px 0 rgba(0,0,0,0.12), 0 -1px 0.5px 0 rgba(0,0,0,0.09);   
}

// 侧栏 header

.site-brand-container{
    border-radius: 3px 3px 0 0;
    padding:15px 10px
}

// 侧栏 body
.header-inner{
    border-radius: 3px;
}

// 侧栏 footer
.sidebar-inner{
    border-radius: 3px;
    padding: 21px 10px;
}

// 主页首个文章项目
.main-inner > .post-block,
.main-inner > .post-block:not(:first-child):not(.sub-menu),
.main-inner > .pagination:not(:first-child):not(.sub-menu),{
    border-radius: 3px;
}

// 文章页底部标签
.post-tags a{
    padding: 0.3rem 0.8rem;
    box-shadow: 0 2px 2px 0 rgba(0,0,0,0.12), 0 3px 1px -2px rgba(0,0,0,0.06), 0 1px 5px 0 rgba(0,0,0,0.12), 0 -1px 0.5px 0 rgba(0,0,0,0.09);
    border-radius: 3px;
}